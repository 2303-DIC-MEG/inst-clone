<h1>投稿一覧</h1>

  <% @pictures.each do |picture| %>
    <%= picture.user.name %>
    <%= image_tag picture.picture.url if picture.picture.present? %>
    <%= picture.content %>
    <%= link_to '詳細を確認する', picture_path(picture.id) %>
    <%= link_to "画像を編集する", edit_picture_path(picture.id), data: { confirm: '本当に編集をしてもいいですか？' } %>
    <%= link_to "削除する", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除をしてもいいですか？' }  %>
  <% end %>

<%= link_to 'お気に入り一覧', bookmarks_pictures_path %>
<%= link_to '投稿画面へ戻る', new_picture_path %>
