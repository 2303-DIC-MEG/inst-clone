<h1>投稿一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <td>画像</td>
    <td>内容</td>
  </tr>

  <% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.image %></td>
    <td><%= picture.content %></td>
    <td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "ブログを編集する", edit_picture_path(picture.id), data: { confirm: '本当に編集をしてもいいですか？' } %></td>
    <td><%= link_to "削除する", picture_path(picture.id), method: :delete, data: { confirm: '本当に削除をしてもいいですか？' }  %>
  </tr>
<% end %>
</table>

<%= link_to '投稿画面へ戻る', new_picture_path %>