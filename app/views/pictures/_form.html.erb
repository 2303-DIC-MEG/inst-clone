<%= form_with(model: @picture, local: true ,url: choose_new_or_edit ) do |form| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
        <% @picture.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="picture_picture">
    <%= form.label :picture %>
    <%= image_tag(@picture.picture.url) if @picture.picture && @picture.picture.url %>
    <%= form.file_field :picture %>
    <%= form.hidden_field :picture_cache %>
  </div>

  <div class="picture_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= link_to "戻る", :back %>
<% end %>